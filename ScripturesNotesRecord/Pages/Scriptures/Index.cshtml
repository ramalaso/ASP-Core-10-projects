@page
@model ScripturesNotesRecord.Pages.Scriptures.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        Book: <input type="text" asp-for="SearchBook" />
        Note Keyword: <input type="text" asp-for="SearchKeyword" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table  table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].Book)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].Chapter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].Verse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].Note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Scripture) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Book)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chapter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Verse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID" data-toggle="tooltip" title="Edit"><i class="fas fa-pen text-info"></i></a> |
                <a asp-page="./Details" asp-route-id="@item.ID" data-toggle="tooltip" title="View Details"><i class="fas fa-pager text-success"></i></a> |
                <a asp-page="./Delete" asp-route-id="@item.ID" data-toggle="tooltip" title="Delete"><i class="fas fa-trash text-danger"></i></a> |
            </td>
        </tr>
}
    </tbody>
</table>
